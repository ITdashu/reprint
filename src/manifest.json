{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "http://localhost:8080/",
  "description": "A Vue Browser Extension",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "*://*/*",
    "<all_urls>",
    "storage",
    "activeTab",
    "notifications"
  ],
  "icons": {
    "32": "icons/reprint-32.png",
    "64": "icons/reprint-64.png",
    "128": "icons/reprint-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "all_frames": false,
      "js": [
        "js/content-script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "32": "icons/reprint-32.png",
      "64": "icons/reprint-64.png"
    }
  },
  "page_action": {
    "browser_style": true,
    "default_icon": "icons/reprint-32.png",
    "default_title": "reprint",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": false,
    "chrome_style": false
  },
  "chrome_url_overrides": {
    "newtab": "override.html"
  }
}
